    <!-- Hidden fields for data storage -->
    <asp:HiddenField ID="hfLeaderboardData" runat="server" Value="[]" />
    <asp:HiddenField ID="hfCurrentTab" runat="server" Value="global" />
    <asp:HiddenField ID="hfCurrentPeriod" runat="server" Value="all" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const leaderboardData = JSON.parse(document.getElementById('<%= hfLeaderboardData.ClientID %>').value);
            const currentTab = document.getElementById('<%= hfCurrentTab.ClientID %>').value;
            const currentPeriod = document.getElementById('<%= hfCurrentPeriod.ClientID %>').value;

            updateLeaderboardDisplay(leaderboardData, currentTab);
            updateActiveFilters(currentTab, currentPeriod);
        });

        function updateLeaderboardDisplay(data, tab) {
            const container = document.getElementById(tab + 'Leaderboard');

            if (!data || data.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <h3 class="empty-state-title">No Data Available</h3>
                        <p class="empty-state-description">Start earning XP to appear on the leaderboard!</p>
                    </div>
                `;
                return;
            }

            let html = '';

            data.forEach(user => {
                const rankClass = user.rank <= 3 ? `rank-${user.rank}` : 'rank-other';
                const userClass = user.isCurrentUser ? 'current-user' : '';

                html += `
                    <div class="leaderboard-card ${userClass}">
                        <div class="rank-badge ${rankClass}">#${user.rank}</div>
                        
                        <div class="user-info">
                            <div class="user-avatar">${user.avatar}</div>
                            <div class="user-details">
                                <div class="user-name">${user.name}</div>
                                <div class="user-level">
                                    <span class="level-badge">Level ${user.level}</span>
                                    <span>${user.xp.toLocaleString()} XP</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="user-stats">
                            <div class="stat-item">
                                <div class="stat-number">${user.pickups}</div>
                                <div class="stat-label-small">Pickups</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number">${user.achievements}</div>
                                <div class="stat-label-small">Achievements</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number">${user.co2Reduced}T</div>
                                <div class="stat-label-small">CO₂ Reduced</div>
                            </div>
                        </div>
                        
                        ${user.isCurrentUser ? `
                            <div class="progress-section" style="margin-top: 1rem;">
                                <div class="progress-text">
                                    <span>Progress to Next Rank</span>
                                    <span>${user.xp % 1000}/1000 XP</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${(user.xp % 1000) / 10}%"></div>
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            container.innerHTML = html;

            // Update user rank display
            const currentUser = data.find(user => user.isCurrentUser);
            if (currentUser) {
                document.getElementById('userRank').textContent = `#${currentUser.rank}`;
            }

            // Update results info
            document.getElementById('resultsInfo').textContent = `Showing top ${data.length} users`;
        }

        function updateActiveFilters(tab, period) {
            // Update active tab
            document.querySelectorAll('.tab').forEach(tabElement => {
                tabElement.classList.remove('active');
            });
            document.querySelector(`[data-tab="${tab}"]`).classList.add('active');

            // Update active period filter
            document.querySelectorAll('.time-filter').forEach(filter => {
                filter.classList.remove('active');
            });
            document.querySelector(`[data-period="${period}"]`).classList.add('active');

            // Update active tab content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(tab + 'Tab').classList.add('active');
        }

        function showNotification(message, type) {
            const existingNotifications = document.querySelectorAll('.custom-notification');
            existingNotifications.forEach(notification => notification.remove());

            const notification = document.createElement('div');
            notification.className = `custom-notification notification-${type}`;
            notification.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle'}"></i>
                <span>${message}</span>
                <button onclick="this.parentElement.remove()">&times;</button>
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);
        }

        // Simulate real-time updates
        function simulateRealTimeUpdate() {
            setInterval(() => {
                // This would typically call a server method to get updated data
                console.log('Checking for leaderboard updates...');
            }, 30000);
        }

        // Start real-time updates
        simulateRealTimeUpdate();
    </script>
</asp:Content>