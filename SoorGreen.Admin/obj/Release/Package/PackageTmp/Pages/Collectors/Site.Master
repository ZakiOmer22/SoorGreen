<%@ Master Language="C#" AutoEventWireup="true" Inherits="SoorGreen.SiteMaster" Codebehind="Site.master.cs" %>

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        <asp:ContentPlaceHolder ID="TitleContent" runat="server"><%: Page.Title %> - SoorGreen | Smart Waste Management</asp:ContentPlaceHolder>
    </title>

    <!-- HEAD CONTENT PLACEHOLDER -->
    <asp:ContentPlaceHolder ID="HeadContent" runat="server"></asp:ContentPlaceHolder>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <style>
        /* THEME VARIABLES */
        :root {
            --primary: #00d4aa;
            --primary-dark: #00b894;
            --secondary: #0984e3;
            --accent: #fd79a8;
            /* Light theme defaults */
            --bg-primary: #f8fafc;
            --bg-secondary: #ffffff;
            --bg-card: #ffffff;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --border-color: #e2e8f0;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            /* Navbar & Sidebar */
            --navbar-bg: #ffffff;
            --sidebar-bg: #ffffff;
            /* Card styles */
            --card-bg: #ffffff;
            --card-border: #e2e8f0;
            /* Status colors */
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
            --primary-rgb: 0, 212, 170;
            /* Scrollbar Colors */
            --scrollbar-bg: transparent;
            --scrollbar-thumb: #cbd5e1;
            --scrollbar-thumb-hover: #94a3b8;
            --scrollbar-track: #f1f5f9;
        }

        /* DARK THEME VARIABLES */
        [data-theme="dark"] {
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --bg-card: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
            --navbar-bg: #1e293b;
            --sidebar-bg: #1e293b;
            --card-bg: #1e293b;
            --card-border: #334155;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            /* Dark scrollbar */
            --scrollbar-bg: transparent;
            --scrollbar-thumb: #475569;
            --scrollbar-thumb-hover: #64748b;
            --scrollbar-track: #1e293b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* CUSTOM SCROLLBARS */
        ::-webkit-scrollbar {
            width: 10px;
            height: 10px;
        }

        ::-webkit-scrollbar-track {
            background: var(--scrollbar-track);
            border-radius: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--scrollbar-thumb);
            border-radius: 8px;
            border: 2px solid var(--scrollbar-track);
            transition: all 0.3s ease;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--scrollbar-thumb-hover);
                border-width: 1px;
            }

        /* Firefox */
        * {
            scrollbar-width: thin;
            scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
        }

        /* IE */
        body {
            -ms-overflow-style: -ms-autohiding-scrollbar;
        }

        /* BODY STYLING - FIXED */
        html, body, form {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            transition: background-color 0.3s ease, color 0.3s ease;
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* MAIN LAYOUT CONTAINER */
        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            width: 100%;
            position: relative;
        }

        /* NAVBAR - FIXED TOP */
        .navbar {
            background: var(--navbar-bg) !important;
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1100;
            height: 80px;
            box-shadow: var(--shadow);
        }

            .navbar.scrolled {
                padding: 0.5rem 0;
                min-height: 70px;
                max-height: 70px;
            }

            .navbar > .container-fluid {
                height: 100%;
                display: flex;
                align-items: center;
            }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

            .navbar-brand:hover {
                opacity: 0.9;
            }

        .nav-link {
            color: var(--text-primary) !important;
            font-weight: 500;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover {
                color: var(--primary) !important;
                transform: translateY(-2px);
            }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--primary);
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

            .nav-link.active {
                color: var(--primary) !important;
            }

                .nav-link.active::after {
                    width: 100%;
                }

        /* MAIN WRAPPER */
        .main-wrapper {
            display: flex;
            flex: 1;
            margin-top: 80px; /* Navbar height */
            width: 100%;
            position: relative;
            min-height: calc(100vh - 80px);
        }

        /* ===== SIDEBAR - FIXED STRUCTURE ===== */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border-color);
            position: fixed;
            left: 0;
            top: 80px;
            bottom: 0;
            overflow-y: auto;
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: var(--shadow);
            display: flex;
            flex-direction: column;
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed);
            }

        /* SIDEBAR CONTENT */
        .sidebar-header {
            padding: 1.5rem 1rem;
            border-bottom: 1px solid var(--border-color);
            text-align: center;
        }

        .sidebar-user {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .sidebar-user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .sidebar-user-info {
            flex: 1;
            overflow: hidden;
        }

        .sidebar-user-name {
            font-weight: 600;
            color: var(--text-primary);
            font-size: 1rem;
            margin-bottom: 0.25rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-user-role {
            font-size: 0.8rem;
            color: var(--primary);
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .stat-item {
            text-align: center;
            padding: 0.5rem;
            background: rgba(var(--primary-rgb), 0.05);
            border-radius: 8px;
            border: 1px solid var(--border-color);
        }

        .stat-value {
            font-weight: 700;
            color: var(--primary);
            font-size: 1.1rem;
        }

        .stat-label {
            font-size: 0.7rem;
            color: var(--text-secondary);
        }

        /* ===== SIDEBAR MENU ===== */
        .sidebar-menu {
            padding: 1rem 0;
            flex: 1;
            overflow-y: auto;
        }

        .menu-section {
            margin-bottom: 1.5rem;
        }

        .menu-title {
            font-size: 0.8rem;
            text-transform: uppercase;
            color: var(--text-secondary);
            padding: 0 1rem 0.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            white-space: nowrap;
            overflow: hidden;
        }

        .menu-items {
            list-style: none;
            padding: 0;
        }

        .menu-item {
            margin-bottom: 0.25rem;
        }

        .menu-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            white-space: nowrap;
        }

            .menu-link:hover {
                background: rgba(var(--primary-rgb), 0.05);
                color: var(--text-primary);
                border-left-color: var(--primary);
            }

            .menu-link.active {
                background: rgba(var(--primary-rgb), 0.1);
                color: var(--primary);
                border-left-color: var(--primary);
            }

        .menu-icon {
            width: 24px;
            margin-right: 0.75rem;
            text-align: center;
            color: var(--text-secondary);
            flex-shrink: 0;
        }

        .menu-text {
            flex: 1;
            font-weight: 500;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .menu-badge {
            background: var(--accent);
            color: white;
            padding: 0.2rem 0.5rem;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            flex-shrink: 0;
        }

        /* Collector Menu Badge */
        #activePickupsBadge {
            background: var(--accent);
            color: white;
            padding: 0.2rem 0.5rem;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }

        /* Collapsed sidebar */
        .sidebar.collapsed .menu-text,
        .sidebar.collapsed .menu-badge,
        .sidebar.collapsed .sidebar-user-info,
        .sidebar.collapsed .sidebar-stats,
        .sidebar.collapsed .menu-title {
            display: none;
        }

        .sidebar.collapsed .menu-link {
            justify-content: center;
            padding: 0.75rem;
        }

        .sidebar.collapsed .menu-icon {
            margin-right: 0;
        }

        /* ===== SIDEBAR FOOTER ===== */
        .sidebar-footer {
            position: sticky;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 1rem;
            border-top: 1px solid var(--border-color);
            background: var(--sidebar-bg);
            z-index: 1001;
            margin-top: auto;
        }

        .sidebar-toggle-btn {
            width: 100%;
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.5rem;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

            .sidebar-toggle-btn:hover {
                background: var(--primary-dark);
                transform: scale(1.02);
            }

        .sidebar.collapsed .sidebar-toggle-btn span {
            display: none;
        }

        .sidebar.collapsed .sidebar-toggle-btn i {
            transform: rotate(180deg);
        }

        /* ===== CONTENT AREA - FIXED ===== */
        .content-area {
            flex: 1;
            margin-left: var(--sidebar-width);
            transition: margin-left 0.3s ease;
            display: flex;
            flex-direction: column;
            width: calc(100% - var(--sidebar-width));
            min-height: calc(100vh - 80px);
            position: relative;
            overflow-y: auto;
        }

            .content-area.collapsed {
                margin-left: var(--sidebar-collapsed);
                width: calc(100% - var(--sidebar-collapsed));
            }

        /* ===== PAGE CONTENT - FIXED WITH HUGE PADDING ===== */
        .page-content {
            flex: 1;
            padding: 2rem;
            min-height: 400px;
            background: var(--bg-primary);
            position: relative;
            z-index: 1;
            /* HUGE BOTTOM PADDING TO PREVENT FOOTER OVERLAP */
            padding-bottom: 250px !important;
            width: 100%;
            overflow: visible;
        }

        /* ===== FOOTER - FIXED POSITION ===== */
        .page-footer {
            flex-shrink: 0;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            padding: 1.5rem 0 0.75rem;
            border-top: 1px solid rgba(255,255,255,0.1);
            position: relative;
            width: 100%;
            display: block;
            z-index: 10;
            margin-top: auto;
        }

        [data-theme="light"] .page-footer {
            background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
            border-top: 1px solid rgba(33, 37, 41, 0.1);
        }

        .page-footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--primary), var(--secondary), transparent);
        }

        /* FOOTER CONTENT */
        .footer-main {
            max-height: none;
            overflow: visible;
        }

        .footer-brand-card {
            background: rgba(255,255,255,0.05);
            padding: 1.25rem;
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: visible;
        }

        [data-theme="light"] .footer-brand-card {
            background: rgba(33, 37, 41, 0.05);
            border: 1px solid rgba(33, 37, 41, 0.1);
        }

        .brand-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .brand-logo {
            position: relative;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: white;
            overflow: hidden;
        }

        .logo-glow {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 12px;
            opacity: 0.5;
            filter: blur(8px);
            animation: logoPulse 2s ease-in-out infinite alternate;
        }

        @keyframes logoPulse {
            0% {
                opacity: 0.3;
                transform: scale(1);
            }

            100% {
                opacity: 0.6;
                transform: scale(1.1);
            }
        }

        .brand-title {
            font-size: 1.5rem;
            font-weight: 800;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }

        .brand-description {
            color: rgba(255,255,255,0.8);
            line-height: 1.5;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        [data-theme="light"] .brand-description {
            color: rgba(33, 37, 41, 0.8);
        }

        .social-section {
            margin-top: 1rem;
        }

        .social-title {
            color: #f8fafc;
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .social-links-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.5rem;
        }

        .social-card {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.75rem;
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.85rem;
        }

        [data-theme="light"] .social-card {
            background: rgba(33, 37, 41, 0.08);
            border: 1px solid rgba(33, 37, 41, 0.1);
            color: rgba(33, 37, 41, 0.8);
        }

        .social-card:hover {
            transform: translateY(-2px);
            border-color: var(--primary);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .social-card i {
            font-size: 1rem;
            width: 18px;
            text-align: center;
        }

        .footer-section {
            padding: 0 0.75rem;
        }

        .section-title {
            color: #f8fafc;
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 1rem;
            position: relative;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -6px;
                left: 0;
                width: 25px;
                height: 2px;
                background: linear-gradient(90deg, var(--primary), var(--secondary));
                border-radius: 2px;
            }

        .footer-links-grid {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .footer-link-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.75rem;
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.05);
            font-size: 0.85rem;
        }

        [data-theme="light"] .footer-link-item {
            color: rgba(33, 37, 41, 0.7);
            background: rgba(33, 37, 41, 0.05);
        }

        .footer-link-item:hover {
            color: var(--primary);
            background: rgba(0,212,170,0.1);
            transform: translateX(5px);
        }

        .footer-link-item i {
            width: 18px;
            text-align: center;
            font-size: 0.85rem;
        }

        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 0.75rem;
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s ease;
        }

        [data-theme="light"] .contact-item {
            background: rgba(33, 37, 41, 0.05);
            border: 1px solid rgba(33, 37, 41, 0.1);
        }

        .contact-item:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(0,212,170,0.3);
            transform: translateY(-2px);
        }

        .contact-icon {
            width: 35px;
            height: 35px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .contact-details {
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
        }

        .contact-label {
            font-size: 0.75rem;
            color: var(--primary);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .contact-value {
            color: rgba(255,255,255,0.9);
            font-size: 0.85rem;
            font-weight: 500;
        }

        [data-theme="light"] .contact-value {
            color: rgba(33, 37, 41, 0.9);
        }

        .ealif-section {
            margin: 1.5rem 0 1rem;
            padding: 1.25rem;
            background: linear-gradient(135deg, rgba(0,212,170,0.1), rgba(9,132,227,0.1));
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.1);
            position: relative;
            overflow: visible;
        }

        .ealif-content {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            text-align: center;
        }

        .ealif-logo {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.1rem;
            animation: logoSpin 4s linear infinite;
            overflow: hidden;
        }

        @keyframes logoSpin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .ealif-text {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.2rem;
        }

        .powered-by {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.7);
            font-weight: 500;
        }

        [data-theme="light"] .powered-by {
            color: rgba(33, 37, 41, 0.7);
        }

        .team-name {
            font-size: 1.2rem;
            font-weight: 800;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .ealif-badge {
            background: rgba(255,255,255,0.1);
            padding: 0.4rem 0.75rem;
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.2);
            font-size: 0.75rem;
            font-weight: 600;
            color: rgba(255,255,255,0.9);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        [data-theme="light"] .ealif-badge {
            background: rgba(33, 37, 41, 0.1);
            border: 1px solid rgba(33, 37, 41, 0.2);
            color: rgba(33, 37, 41, 0.9);
        }

        .copyright-section {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 1rem;
        }

        [data-theme="light"] .copyright-section {
            border-top: 1px solid rgba(33, 37, 41, 0.1);
        }

        .copyright-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .copyright-text {
            color: rgba(255,255,255,0.6);
            font-size: 0.8rem;
        }

        [data-theme="light"] .copyright-text {
            color: rgba(33, 37, 41, 0.6);
        }

        .footer-actions {
            display: flex;
            gap: 1rem;
        }

        .footer-action-link {
            color: rgba(255,255,255,0.6);
            text-decoration: none;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            position: relative;
        }

        [data-theme="light"] .footer-action-link {
            color: rgba(33, 37, 41, 0.6);
        }

        .footer-action-link:hover {
            color: var(--primary);
        }

        .footer-floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            display: none;
        }

        .floating-element {
            position: absolute;
            font-size: 1.2rem;
            opacity: 0.1;
            animation: floatAround 20s infinite linear;
        }

        .el-1 {
            top: 20%;
            left: 5%;
            animation-delay: 0s;
            color: var(--primary);
        }

        .el-2 {
            top: 60%;
            left: 90%;
            animation-delay: 5s;
            color: var(--secondary);
        }

        .el-3 {
            top: 80%;
            left: 10%;
            animation-delay: 10s;
            color: var(--accent);
        }

        .el-4 {
            top: 40%;
            left: 85%;
            animation-delay: 15s;
            color: var(--primary);
        }

        @keyframes floatAround {
            0%, 100% {
                transform: translate(0, 0) rotate(0deg);
            }

            25% {
                transform: translate(100px, -50px) rotate(90deg);
            }

            50% {
                transform: translate(50px, -100px) rotate(180deg);
            }

            75% {
                transform: translate(-100px, -50px) rotate(270deg);
            }
        }

        /* FORM ELEMENTS */
        input, select, textarea {
            background: var(--bg-card) !important;
            border: 1px solid var(--border-color) !important;
            color: var(--text-primary) !important;
            border-radius: 8px !important;
        }

            input:focus, select:focus, textarea:focus {
                border-color: var(--primary) !important;
                box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1) !important;
            }

            input::placeholder, textarea::placeholder {
                color: var(--text-secondary) !important;
            }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .card:hover {
                box-shadow: var(--shadow);
                transform: translateY(-2px);
            }

        .table {
            color: var(--text-primary);
        }

            .table th {
                background: var(--bg-secondary);
                border-color: var(--border-color);
                font-weight: 600;
                padding: 1rem;
            }

            .table td {
                border-color: var(--border-color);
                padding: 0.75rem 1rem;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(var(--primary-rgb), 0.02);
        }

        /* THEME TOGGLE */
        .theme-toggle-container {
            display: flex;
            align-items: center;
            margin-right: 1rem;
        }

        #themeToggle {
            background: none;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex !important;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }

            #themeToggle:hover {
                background: rgba(var(--primary-rgb), 0.1);
                border-color: var(--primary);
                color: var(--primary);
                transform: rotate(15deg);
            }

            #themeToggle .fa-sun {
                display: none;
                color: #fbbf24;
            }

            #themeToggle .fa-moon {
                color: #64748b;
            }

        [data-theme="dark"] #themeToggle .fa-sun {
            display: block;
        }

        [data-theme="dark"] #themeToggle .fa-moon {
            display: none;
        }

