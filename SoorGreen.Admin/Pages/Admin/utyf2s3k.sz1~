    <!-- Simple JavaScript functions -->
    <script>
    function viewPickup(pickupId) {
        alert('View pickup: ' + pickupId);

    }
    
    function assignCollector(pickupId) {
        if (confirm('Assign collector to pickup #' + pickupId + '?')) {
            alert('Collector assigned to pickup #' + pickupId);
            location.reload(); // Refresh page to update status
        }
    }
    
    function completePickup(pickupId) {
        if (confirm('Mark pickup #' + pickupId + ' as completed?')) {
            alert('Pickup #' + pickupId + ' marked as completed');
            location.reload(); // Refresh page to update status
        }
    }
    </script>
</asp:Content>