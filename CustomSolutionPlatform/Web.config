<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<!-- Remove if not using MVC/Razor -->
	</configSections>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" maxRequestLength="2097151" />
		<pages controlRenderingCompatibilityVersion="4.0">
			<namespaces>
				<!-- Keep only namespaces you're actually using -->
				<add namespace="System.Web.Optimization" />
			</namespaces>
		</pages>
		<customErrors mode="Off" />
		<sessionState mode="InProc" timeout="60" />
	</system.web>

	<system.webServer>
		<handlers>
			<remove name="ExtensionlessUrlHandler-Integrated-4.0" />
			<remove name="OPTIONSVerbHandler" />
			<remove name="TRACEVerbHandler" />
			<add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
		</handlers>

		<staticContent>
			<remove fileExtension=".json" />
			<mimeMap fileExtension=".json" mimeType="application/json" />
		</staticContent>

		<security>
			<requestFiltering>
				<requestLimits maxAllowedContentLength="1073741824" />
			</requestFiltering>
		</security>
	</system.webServer>

	<connectionStrings>
		<clear />
		<add name="SoorGreenDB"
			 connectionString="Data Source=.;Initial Catalog=SoorGreenDB;Integrated Security=True;MultipleActiveResultSets=True"
			 providerName="System.Data.SqlClient" />
	</connectionStrings>

	<appSettings>
		<add key="ProjectName" value="SoorGreen Custom Solution Platform" />
		<add key="Version" value="1.0.0" />
		<add key="Port" value="44306" />
		<add key="TeamLead" value="ZACKI ABDULKADIR OMER (ZA)" />
		<add key="TeamMembers" value="ABDIRAXEEM KHADAR ABDIRAXMAN (AK), ARAFAT OSMAN ADEN (AO)" />
		<add key="PlatformMode" value="Development" />
		<add key="webpages:Version" value="3.0.0.0" />
		<add key="webpages:Enabled" value="false" />
		<add key="ClientValidationEnabled" value="true" />
		<add key="UnobtrusiveJavaScriptEnabled" value="true" />
		<!-- Add these to prevent OWIN startup issues -->
		<add key="owin:AutomaticAppStartup" value="false" />
		<add key="owin:appStartup" value="false" />
	</appSettings>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!-- Microsoft.Web.Infrastructure binding redirect (CRITICAL FIX) -->
			<dependentAssembly>
				<assemblyIdentity name="Microsoft.Web.Infrastructure" publicKeyToken="31bf3856ad364e35" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-2.0.0.0" newVersion="2.0.0.0" />
			</dependentAssembly>

			<!-- Newtonsoft.Json binding redirect -->
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>

			<!-- System.Web.Optimization binding redirect -->
			<dependentAssembly>
				<assemblyIdentity name="System.Web.Optimization" publicKeyToken="31bf3856ad364e35" />
				<bindingRedirect oldVersion="0.0.0.0-1.1.0.0" newVersion="1.1.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

	<!-- Restrict access to templates folder -->
	<location path="Templates">
		<system.web>
			<authorization>
				<deny users="*" />
			</authorization>
		</system.web>
	</location>
</configuration>