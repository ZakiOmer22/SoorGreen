            .navbar-brand span {
                font-size: 1.2rem;
            }

            .theme-toggle-container {
                margin-right: 0.5rem;
            }

            #themeToggle {
                width: 36px;
                height: 36px;
                font-size: 1rem;
            }

            .user-welcome {
                padding: 0.5rem;
            }

            .user-info {
                display: none;
            }

            .sidebar-header {
                padding: 1rem;
            }

            .sidebar-user-avatar {
                width: 40px;
                height: 40px;
                font-size: 1rem;
            }

            .page-footer {
                padding: 1rem 0 0.5rem;
            }

            .page-content {
                padding-bottom: 160px !important;
            }

            .footer-brand-card {
                padding: 1rem;
            }

            .social-links-grid {
                grid-template-columns: 1fr;
            }

            .footer-main .row {
                gap: 1.5rem;
            }

            .ealif-section {
                margin: 1rem 0;
                padding: 1rem;
            }
        }

        /* Extra small mobile */
        @media (max-width: 400px) {
            .navbar-brand span {
                display: none;
            }

            .navbar-brand i {
                font-size: 1.5rem;
            }

            .copyright-content {
                flex-direction: column;
                text-align: center;
            }

            .page-footer {
                padding: 0.75rem 0 0.25rem;
            }

            .page-content {
                padding-bottom: 150px !important;
            }
        }

        /* ===== DASHBOARD SPECIFIC FIXES ===== */
        .collector-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            overflow: visible;
        }

        .collector-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        /* Ensure proper spacing for all content */
        .page-content .container-fluid {
            padding-bottom: 60px;
        }

        /* Fix for task lists */
        .task-list {
            max-height: 400px;
            overflow-y: auto;
        }

        /* ===== FINAL FOOTER FIX ===== */
        /* Add extra margin to last element in page content */
        .page-content > *:last-child {
            margin-bottom: 50px !important;
        }

        /* Make sure content area can scroll */
        .content-area {
